#!/bin/bash
if [[ -x /usr/bin/vboxmanage ]]; then
	if [[ -z $1 ]]; then
		VM_LIST=`lsvm`
		select VM in "$VM_LIST exit";
		do
			if [[ "$VM" == 'exit']]; then
				exit
			else
				_svm $VM 
			fi
		done
	else
		_svm $1
	fi
else
	echo vboxmanage not installed.
fi

_svm() {
	vboxmanage startvm $1 --type headless
}
