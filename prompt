#!/bin/bash
# prompt control
case $TERM in 
	xterm*|rxvt*) COLOR_PROMPT=yes;;
esac

if [[ $COLOR_PROMPT ]]; then
	source $DOTFILES/colors
	case $OSUNAME in 
		Darwin)
			;;
		Linux)
			USER_COLOR="\[${BYellow}\]"
			HOST_COLOR="\[${BBlue}\]"
			PWD_COLOR="\[${White}\]"
			CONT_COLOR="\[${BGreen}\]"
			;;
	esac
	RST="\[${Color_Off}\]"
	PS1="${USER_COLOR}\u${RST}@${HOST_COLOR}\h${RST}:${PWD_COLOR}\w${RST}\$ "
	PS2="${CONT_COLOR}Continue${RST}--> " 
else
	PS1='\u@\h:\w$ '
	PS2='\w$ '
fi
